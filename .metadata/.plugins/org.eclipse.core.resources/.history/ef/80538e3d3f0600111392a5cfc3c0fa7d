#include <stdio.h>
#include <string.h>
#include "freertos/FreeRTOS.h"
#include "freertos/task.h"
#include "esp_wifi.h"
#include "esp_event.h"
#include "nvs_flash.h"
#include "esp_netif.h"
#include "esp_log.h"

// BACnet Stack Includes
#include "bacnet/basic/object/device.h"
#include "bacnet/datalink/dlenv.h"
#include "bacnet/datalink/bip.h"
#include "bacnet/basic/sys/debug.h"

// --- WI-FI CONFIGURATION (CHANGE THESE!) ---
#define WIFI_SSID      "YOUR_WIFI_NAME"
#define WIFI_PASS      "YOUR_WIFI_PASSWORD"

static const char *TAG = "BACNET_APP";

// --- WI-FI EVENT HANDLER ---
static void wifi_event_handler(void *arg, esp_event_base_t event_base,
                               int32_t event_id, void *event_data)
{
    if (event_base == WIFI_EVENT && event_id == WIFI_EVENT_STA_START) {
        esp_wifi_connect();
    } else if (event_base == WIFI_EVENT && event_id == WIFI_EVENT_STA_DISCONNECTED) {
        esp_wifi_connect();
        ESP_LOGI(TAG, "Retrying to connect to the AP");
    } else if (event_base == IP_EVENT && event_id == IP_EVENT_STA_GOT_IP) {
        ip_event_got_ip_t *event = (ip_event_got_ip_t *) event_data;
        ESP_LOGI(TAG, "Got IP: " IPSTR, IP2STR(&event->ip_info.ip));
    }
}

void wifi_init_sta(void)
{
    nvs_flash_init();
    esp_netif_init();
    esp_event_loop_create_default();
    esp_netif_create_default_wifi_sta();

    wifi_init_config_t cfg = WIFI_INIT_CONFIG_DEFAULT();
    esp_wifi_init(&cfg);

    esp_event_handler_instance_t instance_any_id;
    esp_event_handler_instance_t instance_got_ip;
    esp_event_handler_instance_register(WIFI_EVENT, ESP_EVENT_ANY_ID, &wifi_event_handler, NULL, &instance_any_id);
    esp_event_handler_instance_register(IP_EVENT, IP_EVENT_STA_GOT_IP, &wifi_event_handler, NULL, &instance_got_ip);

    wifi_config_t wifi_config = {
        .sta = {
            .ssid = WIFI_SSID,
            .password = WIFI_PASS,
            .threshold.authmode = WIFI_AUTH_WPA2_PSK,
        },
    };
    esp_wifi_set_mode(WIFI_MODE_STA);
    esp_wifi_set_config(WIFI_IF_STA, &wifi_config);
    esp_wifi_start();
}

// --- BACNET TASK ---
void bacnet_task(void *pvParameters)
{
    // 1. Initialize Device Object
    Device_Set_Object_Instance_Number(12345); // Your Device ID
    Device_Set_Object_Name("ESP32_BACnet_Sensor");

    // 2. Initialize Networking (BACnet/IP)
    // This function automatically binds to UDP port 47808
    dlenv_init();

    ESP_LOGI(TAG, "BACnet Stack Initialized. Device ID: 12345");

    // 3. Main Loop
    while (1) {
        // Handle network packets (Keep-Alive / Read / Write)
        // This function checks the UDP socket and processes APDUs
        datalink_maintenance_timer(0);
        
        // Give some CPU time back (10ms delay)
        vTaskDelay(pdMS_TO_TICKS(10));
    }
}

void app_main(void)
{
    // 1. Start Wi-Fi
    ESP_LOGI(TAG, "Starting Wi-Fi...");
    wifi_init_sta();

    // 2. Wait a bit for IP address (Simple delay for demo purposes)
    vTaskDelay(pdMS_TO_TICKS(5000));

    // 3. Start BACnet Task
    ESP_LOGI(TAG, "Starting BACnet Task...");
    xTaskCreate(bacnet_task, "bacnet_task", 8192, NULL, 5, NULL);
}
