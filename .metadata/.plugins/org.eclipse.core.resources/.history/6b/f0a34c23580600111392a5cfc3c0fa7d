#include <stdint.h>
#include <stdbool.h>
#include <string.h>

#include "esp_log.h"
#include "esp_wifi.h"
#include "esp_netif.h" // Needed for ESP-IDF v5.x networking

#include "lwip/sockets.h"
#include "lwip/netdb.h"

#include "bacnet/datalink/bip.h"
#include "bacnet/basic/sys/debug.h"

static const char *TAG = "bip_init";
static int BIP_Socket = -1;

/** Setter for the BACnet/IP socket handle. */
void bip_set_socket(int sock_fd)
{
    BIP_Socket = sock_fd;
}

/** Getter for the BACnet/IP socket handle. */
int bip_socket(void)
{
    return BIP_Socket;
}

/* Dummy function required by some stack versions */
void bip_set_interface(char *ifname)
{
}

/** Cleanup function to close the socket */
void bip_cleanup(void)
{
    if (BIP_Socket != -1) {
        close(BIP_Socket);
        BIP_Socket = -1;
    }
}

/**
 * Initialize the BACnet/IP Configuration
 * 1. Gets the IP address from the Wi-Fi driver.
 * 2. Creates a UDP socket bound to port 47808 (0xBAC0).
 */
void bip_init(char *ifname)
{
    // --- 1. Get Network Info (Your Fix) ---
    esp_netif_ip_info_t ip_info;
    esp_netif_t *netif = esp_netif_get_handle_from_ifkey("WIFI_STA_DEF");

    if (netif == NULL) {
        netif = esp_netif_get_default_netif();
    }

    if (netif != NULL) {
        if (esp_netif_get_ip_info(netif, &ip_info) == ESP_OK) {
            bip_set_addr(ip_info.ip.addr);
            bip_set_broadcast_addr(
                (ip_info.ip.addr & ip_info.netmask.addr) | (~ip_info.netmask.addr)
            );
            ESP_LOGI(TAG, "BACnet IP set to: " IPSTR, IP2STR(&ip_info.ip));
        } else {
            ESP_LOGE(TAG, "Failed to get IP info");
        }
    } else {
        ESP_LOGE(TAG, "No network interface found");
    }

    bip_set_port(0xBAC0);

    // --- 2. Create UDP Socket (ADDED) ---
    // Without this, the device cannot communicate!
    if (BIP_Socket < 0) {
        struct sockaddr_in dest_addr;
        dest_addr.sin_addr.s_addr = htonl(INADDR_ANY);
        dest_addr.sin_family = AF_INET;
        dest_addr.sin_port = htons(0xBAC0); // Port 47808

        int sock = socket(AF_INET, SOCK_DGRAM, IPPROTO_IP);
        if (sock < 0) {
            ESP_LOGE(TAG, "Unable to create socket: errno %d", errno);
            return;
        }

        // Set Reuse Address (Important for restarts)
        int opt = 1;
        setsockopt(sock, SOL_SOCKET, SO_REUSEADDR, &opt, sizeof(opt));

        int err = bind(sock, (struct sockaddr *)&dest_addr, sizeof(dest_addr));
        if (err < 0) {
            ESP_LOGE(TAG, "Socket unable to bind: errno %d", errno);
            close(sock);
            return;
        }

        ESP_LOGI(TAG, "BACnet Socket created on port %d", 0xBAC0);
        bip_set_socket(sock);
    }
}