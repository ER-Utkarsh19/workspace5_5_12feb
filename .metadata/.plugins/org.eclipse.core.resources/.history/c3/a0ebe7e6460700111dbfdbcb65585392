        "${bacnet_dir}/whois.c"
        "${bacnet_dir}/rp.c"
        "${port_dir}/net.c"
        "${port_dir}/stubs.c"
    INCLUDE_DIRS "src" "ports/esp32"
    REQUIRES lwip esp_netif
)